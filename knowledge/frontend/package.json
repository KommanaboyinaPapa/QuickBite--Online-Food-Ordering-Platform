{
  "name": "food-ordering-app",
  "version": "1.0.0",
  "description": "Food ordering mobile app with AI health assistant and real-time tracking",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.js\"",
    "prebuild": "expo prebuild --clean",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios"
  },
  "dependencies": {
    "@expo/metro-runtime": "^6.1.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.16",
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.6.2",
    "expo": "~54.0.0",
    "expo-av": "~16.0.8",
    "expo-constants": "~18.0.11",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.10",
    "expo-linking": "~8.0.10",
    "expo-location": "~19.0.8",
    "expo-notifications": "~0.32.14",
    "expo-router": "~6.0.0",
    "expo-speech": "~14.0.8",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "lottie-react-native": "~7.3.1",
    "moment": "^2.29.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.48.0",
    "react-native": "0.81.5",
    "react-native-dotenv": "^3.3.1",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-fast-image": "^8.6.3",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-keychain": "^8.1.2",
    "react-native-maps": "1.20.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-svg-transformer": "^1.2.0",
    "react-native-uuid": "^2.0.1",
    "react-native-web": "^0.21.2",
    "react-redux": "^8.1.3",
    "redux": "^4.2.1",
    "rn-fetch-blob": "^0.12.0",
    "socket.io-client": "^4.7.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/react-native": "^12.2.3",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.53.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "prettier": "^3.1.0",
    "react-native-worklets": "^0.5.1",
    "react-test-renderer": "^19.1.0"
  },
  "private": true,
  "expo": {
    "name": "FoodOrders",
    "slug": "food-ordering-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.foodorders.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow FoodOrders to access your location for delivery tracking",
        "NSMicrophoneUsageDescription": "Allow FoodOrders to use your microphone for voice search"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.foodorders.app",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow FoodOrders to access your location."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#FF6B35"
        }
      ]
    ],
    "scheme": "foodorders"
  }
}